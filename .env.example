# SuperAgent v8 Environment Configuration
# Copy this file to .env and fill in your API keys

# ==================== REQUIRED API KEYS ====================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== CORS CONFIGURATION ====================
# Comma-separated list of allowed origins for CORS
# For local development, use: http://localhost:3000,http://localhost:5000
# For production, use your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# ==================== OPTIONAL SERVICES ====================
# Redis Cache (optional - falls back to disk cache if not available)
REDIS_HOST=localhost
REDIS_PORT=6379

# Lakera Guard AI Security (optional - for prompt injection protection)
LAKERA_API_KEY=

# ==================== DATABASE (Optional) ====================
# PostgreSQL connection string (if using database features)
DATABASE_URL=postgresql://user:password@localhost:5432/superagent

# ==================== GITHUB INTEGRATION (Optional) ====================
# GitHub Personal Access Token (for git operations)
GITHUB_TOKEN=

# ==================== DEPLOYMENT (Optional) ====================
# Heroku API Key (for Heroku deployments)
HEROKU_API_KEY=

# Vercel Token (for Vercel deployments)
VERCEL_TOKEN=

# AWS Credentials (for AWS deployments)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ==================== ADDITIONAL AI PROVIDERS (Optional) ====================
# OpenAI API Key (fallback option)
OPENAI_API_KEY=

# Groq API Key (for fast inference)
GROQ_API_KEY=

# ==================== SECURITY ====================
# Admin tokens for full access (comma-separated)
ADMIN_TOKENS=admin_token_1,admin_token_2

# JWT Secret for user authentication
JWT_SECRET=your_random_secret_key_here

# ==================== FEATURE FLAGS ====================
# Enable/disable specific features
ENABLE_VOICE_INTERFACE=true
ENABLE_DOCKER_SANDBOX=false
ENABLE_MULTIPLAYER=true
ENABLE_CODE_REVIEW=true

# ==================== LOGGING ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
